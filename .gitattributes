# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.md text eol=lf

# Explicitly set shell scripts to LF
*.sh text eol=lf
.shellcheckrc text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=lf
